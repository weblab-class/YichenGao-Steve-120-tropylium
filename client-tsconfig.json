{
  "compilerOptions": {
    "outDir": "client/dist/",
    "noImplicitAny": false,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "./client/",
    "./index.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}